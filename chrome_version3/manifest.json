{
    "manifest_version": 2,

    "name": "extension example3",
    "version": "0.3",
    "description": "Modify the \"Like\" Button at F. And show the count",

    "permissions": [
        "https://www.facebook.com/*",
        "tabs"
    ],

    "browser_action": {
        "default_icon": {
            "19": "K-icon19.png",
            "38": "K-icon38.png"
        },
        "default_title": "extension example 3"
    },

    "background": {
	    "scripts": [ "background.js"],
        "persistent": false
    },

    "content_scripts": [{
        "matches": ["https://www.facebook.com/*"],
        "run_at": "document_end",
        "js": ["script.js"]
    }],

    "default_locale": "zh_TW"
}
